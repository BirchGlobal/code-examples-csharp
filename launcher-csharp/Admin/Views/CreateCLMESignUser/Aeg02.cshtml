@model DocuSign.CodeExamples.Admin.Controllers.CreateCLMESignUser

<h4>2. @Html.Raw(ViewBag.CodeExampleText.ExampleName)</h4>
<p>
    @Html.Raw(ViewBag.CodeExampleText.ExampleDescription)
</p>

<partial name="../../../Views/Shared/LinkToMethodView" model="ViewBag.CodeExampleText" /> 
<p>
    @Html.Raw(
        @String.Format(
            ViewBag.SupportingTexts.ViewSourceFile, 
            "<a target='_blank' href=" + @ViewBag.source + ">CreateCLMESignUser.cs</a>"
        )
    )
</p>


<form class="eg" asp-action="Create" method="post" data-busy="form">
    <div class="form-group">
        <label for="UserName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[0].InputName)
        </label>

        <input type="text" class="form-control" name="UserName" 
            placeholder="@ViewBag.CodeExampleText.Forms[0].Inputs[0].InputPlaceholder" required />
    </div>
    <div class="form-group">
        <label for="FirstName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[1].InputName)
        </label>

        <input type="text" class="form-control" name="FirstName" 
            placeholder="@ViewBag.CodeExampleText.Forms[0].Inputs[1].InputPlaceholder" required />
    </div>
    <div class="form-group">
        <label for="LastName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[2].InputName)
        </label>

        <input type="text" class="form-control" name="LastName" 
            placeholder="@ViewBag.CodeExampleText.Forms[0].Inputs[2].InputPlaceholder" required />
    </div>
    <div class="form-group">
        <label for="Email">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[3].InputName)
        </label>

        <input type="text" class="form-control" name="Email" 
            placeholder="@ViewBag.CodeExampleText.Forms[0].Inputs[3].InputPlaceholder" required />

        <small id="emailHelp" class="form-text text-muted">
            @Html.Raw(ViewBag.SupportingTexts.HelpingTexts.EmailWontBeShared)
        </small>
    </div>
    <div class="form-group">
        <label for="ESignaturePermissionProfiles">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[4].InputName)
        </label>

        @Html.DropDownList(
            "ESignPermissionProfileId", 
            new SelectList(ViewBag.ESignPermissionProfiles, "PermissionProfileId", "PermissionProfileName"), 
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label for="CLMPermissionhProfiles">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[5].InputName)
        </label>

        @Html.DropDownList(
            "CLMPermissionProfileId", 
            new SelectList(ViewBag.CLMPermissionProfiles, "PermissionProfileId", "PermissionProfileName"), 
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label for="DSGroups">
            @Html.Raw(ViewBag.CodeExampleText.Forms[0].Inputs[6].InputName)
        </label>

        @Html.DropDownList(
            "DsGroupId", 
            new SelectList(ViewBag.DsGroups, "DsGroupId", "GroupName"), 
            new { @class = "form-control" }
        )
    </div>
    <button type="submit" class="btn btn-primary">@Html.Raw(ViewBag.SupportingTexts.ContinueButton)</button>
</form>

