@using DocuSign.CodeExamples.Common
<h4>@Html.Raw(ViewBag.CodeExampleText.ExampleName)</h4>
<p>
    @Html.Raw(ViewBag.CodeExampleText.ExampleDescriptionExtended)
</p>

@if (ViewBag.showDoc == true)
{
    <p><a target='_blank' href='<%= documentation %>'>Documentation</a> about this example</p>
}

<partial name="../../../Views/Shared/LinkToMethodView" model="ViewBag.CodeExampleText" /> 


<p>
    View source file <a target="_blank" href="@ViewBag.source">CreateBrand.cs</a> on GitHub.
</p>

<form class="eg" action="" method="post" data-busy="form">
    <p>
        <strong>New brand</strong>
    </p>

    <div class="form-group">
        <label for="signerEmail">Brand name</label>
        <input type="text" class="form-control" id="brandName" name="brandName"
               aria-describedby="emailHelp" placeholder="New Brand" required />
    </div>
    <div class="form-group">
        <label for="defaultBrandLanguage">Default Brand language</label>
        @Html.DropDownList("defaultBrandLanguage", new SelectList(Languages.SupportedLanguages, "Key", "Value", "en"), new { @class = "form-control", @required = "required" })
    </div>
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
